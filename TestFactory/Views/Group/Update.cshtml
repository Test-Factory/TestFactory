@model GroupViewModel
@using (Html.BeginForm("Update", "Group", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.Id)
    <div class="form-horizontal">
        <h4 class="updatePop-Up">@GlobalRes_ua.editAction</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2 createPop-Up">@GlobalRes_ua.longName</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control updatePop-Up", maxlength = "30", pattern = "[A-z0-9]" } })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger"})
            </div>
        </div>
       
        <div class="form-group">
            <label class="control-label col-md-2 createPop-Up">@GlobalRes_ua.shortName</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShortName, new { htmlAttributes = new { @class = "form-control updatePop-Up", maxlength = "10", pattern = "[A-z0-9]" } })
                @Html.ValidationMessageFor(model => model.ShortName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 updatePop-Up">
                <button type="reset" class="btn grey btn-default">@Html.RouteLink(GlobalRes_ua.cancel, "Default", null, new { id = "whiteText" })</button>
                <input type="submit" value="@GlobalRes_ua.save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

