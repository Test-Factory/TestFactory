@model List<GroupViewModel>

    <h2>List of groups</h2>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="create btn btn-default">
                @Html.RouteLink("Create new group","createGroup")
            </button>
        </div>
    </div>
    @foreach (var item in Model)
{
        <div class="row">
            <div class="col s12 m6">
                    <div class="card blue-grey darken-1 card-action">
                            <div class="card-content white-text">
                                <span class="card-title">@item.ShortName</span>
                                <p>
                                    @item.FullName
                                </p>
                            </div>
                            <div class="card-action">
                                @Html.RouteLink("Edit", "updateGroup", new { id = item.Id })
                            </div>
                   </div>
             </div>
        </div>
    }

@section Scripts{
     @Scripts.Render("~/Scripts/Index.js")
}

