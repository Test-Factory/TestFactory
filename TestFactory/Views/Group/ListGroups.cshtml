@model List<GroupViewModel>

    @Styles.Render("~/Content/Site.css")
    <h2>ListGroups</h2>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="create btn btn-default">
                Create new group
            </button>
        </div>
    </div>

    @foreach (var item in Model)
{
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">@item.ShortName</span>
                        <p>
                            @item.FullName
                        </p>
                    </div>
                    <div class="card-action">
                        @Html.ActionLink("Details", "GetStudents", "Student", new { groupId = item.Id }, null)
                        @Html.ActionLink("Delete", "DeleteGroup", new { id = item.Id })
                    </div>
                </div>
            </div>
        </div>
        <div id="createGroup">
            <div id="create">
                @Html.Partial("CreateGroup", new GroupViewModel())
            </div>
        </div>
    }
        @section Scripts
{
            @Scripts.Render("~/Scripts/Index.js")
        }

