@model IEnumerable<TestFactory.MVC.ViewModels.GroupViewModel>

@{
    ViewBag.Title = "ListGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListGroups</h2>

<p>
    @Html.ActionLink("Create New", "CreateGroup")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateGroup", new { id=item.Id }) |
            @Html.ActionLink("Details", "GetStudents", "Student", new { groupId = item.Id }, null) |
            @Html.ActionLink("Delete", "DeleteGroup", new {id = item.Id })
        </td>
    </tr>
}

</table>
