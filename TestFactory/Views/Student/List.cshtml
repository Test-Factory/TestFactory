@model List<StudentViewModel>
<div class='liveExample'>

    <form action='/someServerSideHandler'>
        <p>
            <button class="btn btn-primary" id="create">Create</button>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>FirestName</th>
                    <th>LastName</th>
                    <th />
                </tr>
            </thead>
            <tbody data-bind="foreach: students">
                <!-- ko if: mode() == $root.mods.display -->
                <tr>
                    <td data-bind="text: firstName"></td>
                    <td data-bind="text: lastName"></td>
                    <td>
                        <button class="btn btn-success" data-bind="click: $root.editStudent">Edit</button>
                    </td>
                </tr>
                <!-- /ko -->
                <!-- ko if: mode() == $root.mods.edit -->
                <tr>
                    <td><input type="text" data-bind="textInput: $root.studentForUpdate.firstName" /></td>
                    <td><input type="text" data-bind="textInput: $root.studentForUpdate.lastName" /></td>
                    <td>
                        <button class="btn btn-success" data-bind="click: $root.saveEditedStudent">Save</button>
                    </td>
                </tr>
                <!-- /ko -->
            </tbody>
            <tfoot>
                <!-- ko if: $root.studentForCreate.mode() == $root.mods.create -->
                <tr>
                    <td><input type="text" data-bind="textInput: $root.studentForCreate.firstName" /></td>
                    <td><input type="text" data-bind="textInput: $root.studentForCreate.lastName" /></td>
                    <td>
                        <button class="btn btn-success" data-bind="click: $root.saveAddedStudent">Save</button>
                    </td>
                </tr>
                <!-- /ko -->
            </tfoot>
        </table>
        <a href="#" data-bind='click: addStudent' id="addStudent">Додати студента</a>
    </form>

</div>
@section Scripts{
               <script>
    $(document).ready(function () {
        var viewModel = new StudentsViewModel();
        ko.applyBindings(viewModel);
    });

</script>
}

   