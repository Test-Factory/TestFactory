@Styles.Render("~/Students/css")

    <div id="group-filter">
          Фільтр по старту навчання <select data-bind="options: groupYears, value:searchByStudentsYearOfStartEducation, optionsCaption:'Оберіть рік',valueupdate:'onkeydown'"></select>
            по групам <select data-bind="options: uniqueGroupNames, value:searchByStudentsGroups, optionsCaption: 'Оберіть групу', valueupdate:'onkeydown'"></select>
        <span id="clearFilter" data-bind="click: resetDropdowns">Очистити фільтри</span>
        </div>
<div>
    <div class="button-block">
                <div class="table-menu description-buttons">Оцінки:</div>
                <div class="table-menu table-menu-button subject-button" onclick="Holland()">Предмети</div>
                <div class="table-menu table-menu-button test-button" onclick="Subjects()" style="background-color: gainsboro">Тест Холланда</div>
            </div>
        <form style="overflow-x: auto">
            <table id="tbStudentList" class="border-table">
                <thead>
                    <tr class="noselect border-table-tr">
                        <th class="last-name center-text" style="position: absolute; z-index: 900; background-color: #F3F3F4;">
                            <a class="btn-flat  sort-link" data-bind="click:  function(){ $root.sortingByName('lastName');} ">@GlobalRes_ua.surname </a>
                            <!-- ko if: $root.sortKey() == "lastName" -->
                            <span data-bind="css: selectedClassForSortedField"></span>
                            <!-- /ko -->
                        </th>
                        <th class="first-name center-text" style="position: absolute; margin-left: 120px; z-index: 900; ; background-color: #F3F3F4;">
                            <a class="btn-flat  sort-link" data-bind="click: function(){ $root.sortingByName('firstName'); } ">@GlobalRes_ua.name</a>
                            <!-- ko if: $root.sortKey() == "firstName" -->
                            <span data-bind="css: selectedClassForSortedField"></span>
                            <!-- /ko -->
                        </th>
                        <th class="group center-text" style="position: absolute; margin-left: 240px; z-index: 900; ; background-color: #F3F3F4; min-width: 120px;">
                            <a class="btn-flat  sort-link" data-bind="click: function(){ $root.sortingByName('groupShortName'); } ">@GlobalRes_ua.group</a> 
                            <!-- ko if: $root.sortKey() == "groupShortName" -->
                            <span data-bind="css: selectedClassForSortedField"></span>
                            <!-- /ko -->
                        </th>
                        <th colspan="2" class="th-content-hide"></th>
                        <!-- ko foreach: $root.categories -->
                        <th class="content-test marks center">
                            <a class="btn-flat sort-link" data-bind="text: code, click: function(){ $root.sortingByMark('marks', $data.id, $data.code); } "> </a>
                            <!-- ko if: $root.sortKey() == $data.code() -->
                            <span data-bind="css: $root.selectedClassForSortedField"></span>
                            <!-- /ko -->
                        </th>
                        <!-- /ko -->
                        <!-- ko foreach: $root.subjects -->
                        <th class="subjects content-subjects">
                            <a class="btn-flat sort-link" data-bind="text: ShortName"></a>
                            
                        </th>
                        <!-- /ko -->
                    </tr>
                    <tr class="content-test averagemarks">
                        <td colspan="3" class="averageMarksNameColumn">@GlobalRes_ua.averageMarks </td>

                    </tr> 
                    <tr class="content-test mathematicalExpectation">
                        <td colspan="3" class="mathematicalExpectationNameColumn">@GlobalRes_ua.standardDeviationMarks </td>
                        <!-- ko foreach: $root.standardDeviation -->
                        <td class="marks center" data-bind="text: $data"></td>
                        <!-- /ko -->
                    </tr>                             
                </thead>

                <tr >
                    <td colspan="9" class="preloader-content">
                        <!-- ko if: $root.preloader() -->
                        <div class="progress ">
                            <div class="indeterminate"></div>
                        </div>
                        <!-- /ko -->
                    </td>
                </tr>
                <tbody class="student-content">
                    <tr class="allStudents">
                        <td colspan="3" style="position: absolute">
                            <div style="position: absolute">
                                <table data-bind="foreach: filteredRecords2">
                                    <tr class="allStudents">
                                        <td class="cels-padding last-name " data-bind="text: lastName"></td>
                                        <td class="cels-padding first-name " data-bind="text: firstName"></td>
                                        <td class="cels-padding group-name " data-bind="text: groupShortName"></td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                        <td colspan="2"></td>
                        <td colspan="6" class="content-test">
                            <div>
                                <table data-bind="foreach: filteredRecords2">
                                    <tr class="allStudents">
                                        <!-- ko foreach: marks -->
                                        <td>
                                             <table>
                                                 <tbody class="markSubjectContent">
                                                        <tr>
                                                            <td class="marks studentMark" data-bind="text: value" style="font-size: 1.3em; text-align: center; padding-top: 3px"></td>
                                   
                                                        </tr>
                                                        <tr>
                                                            <td class="studentMarkDetails" style="padding-bottom: 4px;">
                                                                    <label class="greenText"></label>
                                                            </td>
                                                        </tr>
                                                  </tbody>
                                             </table>
                                        </td>
                                        <!-- /ko -->
                                        </tr>
                                </table>
                            </div>
                        </td>
                        
                        @*<!-- ko foreach: $root.subjectsMarks -->
                        <td class="subjectsMarks" data-bind="text: Value"></td>
                        <!-- /ko -->*@
                    </tr>
                </tbody>
            </table>
        </form>
    </div>

@section Scripts{
<script>
    $('.tooltipped').tooltip({ delay: 50 });
    var globalView = null;
    function Holland() {
        $('.content-test').hide();
        $('.content-subjects').show();
        $('.subject-button').css('background-color', 'gainsboro');
        $('.test-button').css('background-color', 'transparent');
        $('.th-content-hide').attr("colspan", "3");
        $('.th-content-hide').css("min-width", "360px");
    }
    function Subjects() {
        $('.content-test').show();
        $('.content-subjects').hide();
        $('.test-button').css('background-color', 'gainsboro');
        $('.subject-button').css('background-color', 'transparent');
        $('.th-content-hide').attr("colspan", "2");
        $('.th-content-hide').css("min-width", "0px");
    }
    $(document).ready(function () {
        var viewModel = new StudentsAllViewModel("lastName");
        globalView = viewModel;
        ko.applyBindings(viewModel);
    });
</script>
}

   