@model SubjectViewModel

@using (Html.BeginForm("Create", "Subject", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="createPop-Up">@GlobalRes_ua.createSubject</h4> @*TODO: resourse*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2 createPop-Up">@GlobalRes_ua.nameSubject</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control createPop-Up", maxlength = "100", pattern = "A-z0-9" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 createPop-Up">
                <button type="reset" class="btn grey btn-default declineCreate">@GlobalRes_ua.cancel</button>
                <input class="btn btn-default" type="submit" value="@GlobalRes_ua.save" />
            </div>
        </div>
    </div>
}
